{% extends 'base.html.twig' %}


{% block stylesheets %}
	{{parent ()}}
	<link rel="stylesheet" href="{{ asset("assets/css/propertyFormDetails.css")}}"/>
{% endblock %}

{% block javascripts %}
	{{parent ()}}
	<script src="{{ asset("assets/js/showPropertyModal.js")}}" defer></script>
{% endblock %}

{% block body %}


{# <div >
            {{property.id}}  {{property.description}} {{property.address}} : Date of creation {{property.createdAt| date('d-m-Y')}}
        </div>     
        {% endblock %}

        {% block title %} 
            Property N°: {{property.id}}  #}
	<!--heading-->
	<div
		class="bodyContainer">
		<!--Display One property-->


		<div class="container" class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
			<header>Property Reference :
				{{property.id}}</header>

			<section class="property-information">
				<div class="row mt-5">
					<div class="col-md-3">
						<div class="form-group">
							<label for="propertyType">Property Type</label>
							<div class="form-control">{{property.propertyType}}</div>
						</div>
					</div>

					<div class="col-md-3">
						<div class="form-group">
							<label for="Floor">Floor</label>
							<div class="form-control">{{property.address.floorNumber}}</div>
						</div>
					</div>

					<div class="col-md-3">
						<div class="form-group">
							<label for="rooms">Number of rooms</label>
							<div class="form-control">{{property.rooms}}
							</div>
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label for="area">Area (m²)</label>
							<div class="form-control">{{property.area}}
							</div>
						</div>
					</div>


					<div class="row mt-3">
						<div class="col-md-3">
							<div class="form-group">
								<label for="operation">Operation</label>
								<div class="form-control">{{property.operation}}
								</div>
							</div>
						</div>

						<div class="col-md-3">
							<div class="form-group">
								<label for="owner">Owner</label>
								<div class="form-control">{{property.owner}}
								</div>
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label for="area">Created At</label>
								<div class="form-control">{{property.createdAt.format('d/m/Y')}}
								</div>
							</div>
						</div>

						<div class="col-md-3">
							<div class="form-group">
								<label for="area">Updated At</label>
								{{property.updatedAt ?
								'<div class="form-control">{{property.updatedAt.format("d/m/Y")}}</div>' : '<div class="form-control">-</div>'}}

							</div>
						</div>


					</div>
				</section>

				<section class="address">
					<div class="row mt-3">
						<div class="col-md-3">
							<div class="form-group">
								<label for="address">Street</label>
								<div class="form-control">{{property.address.street}}
								</div>

							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label for="city">City</label>
								<div class="form-control">{{property.address.cityRegion.city}}
								</div>
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label for="region">Region</label>
								<div class="form-control">{{property.address.cityRegion.region}}
								</div>
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label for="price">Price(€)</label>
								<div class="form-control">{{property.price}}
								</div>
							</div>
						</div>

					</div>
				</section>
				<section class=" complement-information">
					<div class="row mt-3">
						<div class="col-md-6">
							<div class="form-group">
								<label for="description">Description</label>
								<textarea class="form-control" row="2">{{property.description}}
								</textarea>
							</div>
						</div>

						<div class="col-md-3">
							<div class="form-group">
								<label for="price">Availability</label>
								{% if property.isAvailable is same as (0) %}
									<div class="form-control">No</div>
								{% else %}
									<div class="form-control">Yes</div>
								{% endif %}

							</div>
						</div>
					</section>

					<!-- Buttons -->
					<div class="d-grid gap-2 mt-5 d-md-flex justify-content-md-between">

						<button type="button" class="btn btn-primary text-nowrap" data-bs-toggle="button" autocomplete="off">Edit Property</button>

						<div class="text-nowrap">
							{{ render(controller('App\\Controller\\PropertyAdController::addPropertyAd', {'property': property} )) }}
						</div>
						{# <button type="button" class="btn btn-primary text-nowrap" data-bs-toggle="button" autocomplete="off">Create Property Ads</button> #}

						<button type="button" class="btn btn-primary text-nowrap" data-bs-toggle="button" autocomplete="off">Edit Property Ads
						</button>

						<button type="button" class="btn btn-primary text-nowrap" data-bs-toggle="button" autocomplete="off">Archive Property Ads</button>

						<button type="button" class="btn btn-primary text-nowrap" data-bs-toggle="button" autocomplete="off">Manage Pictures</button>

						{# <div>
																																					{{ render(controller('App\\Controller\\PropertyAdController::addPropertyAd', {'property': property} )) }}
																																				</div> #}


					{# <button type="button" class="btn btn-primary text-nowrap" href="#addEmployeeModal" data-bs-toggle="modal" autocomplete="off" data-target="#addEmployeeModal" data-wat={{property.id}}>Add Property Ads</button> #}

						{# {% set submit_url = path('add_propertyAd', {'id': property.id}) %}
																																																																																{% include 'Pages/propertyAd/addAd.html.twig' with {url: submit_url} %} #}

						{# <a href="#addEmployeeModal" class="btn btn-success" data-bs-toggle="modal" data-target="#addEmployeeModal">							<i class="fa fa-plus"><i>												<span>Add Property Ads</span>	</a> #}
					</div>
				</div>
			</div>


		{% endblock %}
