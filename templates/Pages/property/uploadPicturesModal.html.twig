{% block body %}

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="uploadPicModal" aria-hidden="true">
		<div class="modal-dialog modal-dialog-scrollable modal-xl">
			<div class="modal-content">
				<div
					class="modal-header">
					<!-- title -->
					<h4 class="modal-title " id="uploadPicModal">Upload new pictures for the property</h4>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div
					class="modal-body">
					<!-- uploader section -->
					<div id="uploader-section" class="uploader">
						<input id="file-upload" type="file" name="fileUpload" accept="image/*" multiple>
						<label for="file-upload" id="file-drag">
							<div id="messages" class="hidden"></div>
							<div id="start">
								<i class="fa fa-download" aria-hidden="true"></i>
								<div>Click to select new pictures or drag here</div>
							</div>
						</label>
					</div>

					<!-- preview new pictures section -->
					<div id="preview-section" class="section hidden">
						<h5>New pictures to load</h5>
						<div id="new-images"></div>
					</div>

					<!-- Already loaded pictures section -->
					<div id="loaded-section" class="section hidden">
						<h5>Already loaded pictures</h5>
						<div id="loaded-images"></div>
					</div>

				</div>
				<div class="modal-footer" id="upload-section">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button id="upload-button" type="button" class="btn btn-success disabled" onclick="uploadAll({{property.id}})">upload</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
