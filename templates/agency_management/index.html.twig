	{% block body %}
		{% block stylesheets %}
		{{ parent ()}}
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous"/> <link rel="stylesheet" href="assets/css/agencyManagementPannel.css"/>
	{% endblock %}

	{% block javascripts %}
		<script src="https://cdn.jsdelivr.net/npm/apexcharts" defer></script>
		<script src="{{ asset ("assets/js/agencyManagementPannel.js")}}" defer></script>
	{% endblock %}


	{# <body id="body"> #}

	{% if app.user %}

		<div class="page-container">
			<nav class="navbar">
				<div class="nav_icon" onclick="toggleSidebar()">
					<i class="fa fa-bars" aria-hidden="true"></i>
				</div>
				<div class="navbar__left">
					<a class="active_link" href="#">Dashboard</a>
					<a href="{{ path('app_home') }}">Home</a>
				</div>
				<div class="navbar__right">
					<a href="#">
						<i class="fa fa-search" aria-hidden="true"></i>
					</a>
					<a
						href="#">
						{# <i class="fa fa-clock-o" aria-hidden="true"></i> #}
						{{app.user.fullName}}
					</a>


					{% set srcProfileImg=app.user.avatar %}

					{% if app.user.avatar starts with 'https://'%}
						<a href="#">
							<img width="40" src="{{srcProfileImg}}" alt="Profile image" alt="Profile image"/>
						</a>
					{% else %}
						<a href="#">
							<img width="40" height="40" class="profileImage" src={{ asset('upload/avatars/')~ srcProfileImg }} alt="profileImage">
						</a>
					{% endif %}
				</div>
			</nav>

			<main id="spa">
				<div
					class="main__container">

					<!-- MAIN TITLE STARTS HERE -->
					<div class="main__title">
						<img src="assets/hello.svg" alt=""/>
						<div class="main__greeting">
							<h1>Welcome
								{{app.user.fullName}}
							</h1>
							<p>Role Account :
								{{app.user.roles[0]}}</p>
						</div>
					</div>

					<!-- MAIN TITLE ENDS HERE -->

					<!-- MAIN CARDS STARTS HERE -->
					<div class="main__cards">
						<div class="card">
							<i class="fa fa-user-o fa-2x text-lightblue" aria-hidden="true"></i>
							<div class="card_inner">
								<p class="text-primary-p">Total clients</p>
								<span class="font-bold text-title">578</span>
							</div>
						</div>

						<div class="card">
							<i class="fa fa-home fa-2x text-red" aria-hidden="true"></i>
							<div class="card_inner">
								<p class="text-primary-p">Available prop</p>
								<span class="font-bold text-title">2467</span>
							</div>
						</div>

						<div class="card">
							<i class="fa fa-building fa-2x text-yellow" aria-hidden="true"></i>
							<div class="card_inner">
								<p class="text-primary-p">Total Property
								</p>
								<span class="font-bold text-title">340</span>
							</div>
						</div>

						<div class="card">
							<i class="fa fa-thumbs-up fa-2x text-green" aria-hidden="true"></i>
							<div class="card_inner">
								<p class="text-primary-p">Contracts</p>
								<span class="font-bold text-title">645</span>
							</div>
						</div>
					</div>
					<!-- MAIN CARDS ENDS HERE -->

					<!-- CHARTS STARTS HERE -->
					<div class="charts">
						<div class="charts__left">
							<div class="charts__left__title">
								<div>
									<h1>Daily Reports</h1>
									<p>Grenoble, Auvergne-Rhone-Alpe, France</p>
								</div>
								<i class="fa fa-euro-sign" aria-hidden="true"></i>
							</div>
							<div id="apex1"></div>
						</div>

						<div class="charts__right">
							<div class="charts__right__title">
								<div>
									<h1>Stats Reports</h1>
									<p>Grenoble, Auvergne-Rhone-Alpe, France</p>
								</div>
								<i class="fa fa-euro-sign" aria-hidden="true"></i>
							</div>

							<div class="charts__right__cards">
								<div class="card1">
									<h1>Income</h1>
									<p>75,300€</p>
								</div>

								<div class="card2">
									<h1>Sales</h1>
									<p>124,200€</p>
								</div>

								<div class="card3">
									<h1>Users</h1>
									<p>3900</p>
								</div>

								<div class="card4">
									<h1>Expenses</h1>
									<p>1881€</p>
								</div>
							</div>
						</div>
					</div>
					<!-- CHARTS ENDS HERE -->
				</div>
			</main>

			<div id="sidebar">
				<div class="sidebar__title">
					<div class="sidebar__img">
						<img
						width="60" class="profileImage" src={{ asset('upload/images/logo.png') }} alt="logo">

						{# <img src="assets/logo.png" alt="logo"/> #}
						<h1>SerenityEstate Agency</h1>
					</div>
					<i onclick="closeSidebar()" class="fa fa-times" id="sidebarIcon" aria-hidden="true"></i>
				</div>

				<div class="sidebar__menu">
					<div class="sidebar__link active_menu_link">
						<i class="fa fa-home"></i>
						<a href="#">Dashboard</a>
					</div>
					<h2>Management</h2>
					<div class="sidebar__link">
						<i class="fa fa-building-o" aria-hidden="true"></i>
						<a href="{{ path('app_property_add') }}">Property-Add</a>
					</div>
					<div class="sidebar__link">
						<i class="fa fa-building-circle-check"></i>
						<a href="{{ path('app_property_list') }}">Listing Property</a>
					</div>
					<div class="sidebar__link">
						<i class="fa fa-buysellads"></i>
						<a href="{{ path('app_propertyAd_list') }}">Listing Ads</a>
					</div>
					<div class="sidebar__link">
						<i class="fa fa-handshake-o"></i>
						<a href="#">Contracts</a>
					</div>
					<div class="sidebar__link">
						<i class="fa fa-people-arrows"></i>
						<a href="#">Agents</a>
					</div>
					<h2>Settings</h2>
					<div class="sidebar__link">
						<i class="fa fa-user-pen"></i>
						<a href="{{ path('app_edit_profile') }}">Edit Profil</a>
					</div>
					<div class="sidebar__logout">
						<i class="fa fa-power-off"></i>
						<a href="{{ path('app_logout') }}">Log out</a>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
