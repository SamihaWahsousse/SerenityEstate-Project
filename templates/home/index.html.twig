{% extends 'base.html.twig' %}

{% block body %}

	{% block stylesheets %}
		{{ parent ()}}
		<link rel="stylesheet" href="assets/css/_navbar.css"/>
		<link rel="stylesheet" href="assets/css/_footer.css"/>
		<link rel="stylesheet" href="assets/css/_cards.css"/>
		<link rel="stylesheet" href="assets/css/homePage.css"/>
	{% endblock %}

	{% block javascripts %}
		<script src="{{ asset ("assets/js/agencyManagementPannel.js")}}" defer></script>
	{% endblock %}

	<!-- main container -->
	<div
		class="container-fluid justify-content-between">

		<!-- include the navbar -->
		{% include '_partials/_navbar.html.twig' %}

		<!-- Hero container -->
		<div class="hero-image">
			<div class="container hero-container d-flex-column text-center">
				<h1 class="hero-title">Buy & rent your property now !
				</h1>
				<p class="hero-text">Need a best favorite place with family right now ?Here's the best selection for you !
				</p>
			</div>
		</div>

		<div class="bodyContainer">

			<div class="container">
				<p>ici les cards</p>

				{% include '_partials/_cards.html.twig' %}

			</div>


			{% if app.user %}
				<div class="mb-3">you are login as :
					{{ app.user.fullName }}</div>
				{% set srcProfileImg=app.user.avatar %}

				{% if app.user.avatar starts with 'https://'%}
					<div class="mb-3">
						<img class="profileImage" src="{{srcProfileImg}}" alt="Profile image" style="width:80px; height: 80px ">
					</div>
				{% else %}
					<div class="mb-3">
						<img class="profileImage" src={{ asset('upload/avatars/')~ srcProfileImg }} alt="profileImage" style="width:80px; height: 80px ">
					</div>
				{% endif %}


				<a class="btn btn-primary " href="{{ path('app_edit_profile') }}" role="button">Edit profil
				</a>
				<div class="mt-3">
					<a class="btn btn-primary " href="{{ path('admin_panel') }}" role="button">
						Administration Panel
					</a>
				</div>
				<div class="mt-3">
					<a class="btn btn-primary " href="{{ path('app_property_add') }}" role="button">
						Add property
					</a>
				</div>
				<div class="mt-3">
					<a class="btn btn-primary " href="{{ path('app_property_list') }}" role="button">
						properties list
					</a>
				</div>

				<div class="mt-3">
					<a class="btn btn-primary " href="{{ path('app_logout') }}" role="button">logout
					</a>
				</div>

			{% else %}
				<div class="mb-3">
					<a class="btn btn-primary " href="{{ path('app_login') }}" role="button">Login
					</a>
				</div>
				<div class="mb-3">
					<a class="btn btn-primary " href="{{ path('app_agency_management') }}" role="button">Espace Agent-Manager
					</a>
				</div>

			{% endif %}
		</div>
		<!-- include the footer -->
		{% include '_partials/_footer.html.twig' %}


	{% endblock %}
