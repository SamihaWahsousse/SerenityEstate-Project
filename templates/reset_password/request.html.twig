{% extends 'base.html.twig' %}


{% block body %}

	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger mt-2 " role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="container d-flex justify-content-center mt-5">
		<div class="mt-3">
			<div class="headerPart d-flex flex-column justify-content-center align-items-center mt-2 ">
				<h2>Forgot Password</h2>
				<img class="mt-2 resetPasswordIcon h-50 w-50" src={{ asset('upload/images/passwordIcon.png') }}>

			</div>

			<div class="paragraphText d-flex flex-column align-items-center justify-content-center mt-2 pb-0">
				<span>
					Please Enter Your Email Address</span>
				<span>To Receive a Reset Link</span>
			</div>
			<div class="pt-0">
				{{ form_start(requestForm) }}
				<div class="d-flex flex-column-reverse justify-content-center ">
					<button class="me-4 btn btn-success fw-medium w-75 align-self-center">Reset password</button>
					{{ form_row(requestForm.email) }}
					{{ form_end(requestForm) }}
				</div>
			</div>
		</div>
	</div>


{% endblock %}
