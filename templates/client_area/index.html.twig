{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent ()}}
	<link rel="stylesheet" href="assets/css/_navbar.css"/>
	<link rel="stylesheet" href="assets/css/_footer.css"/>
{% endblock %}


{% block javascripts %}
	<script src="{{ asset ("assets/js/navbar.js")}}" defer></script>
{% endblock %}


{% block body %}
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<div class="container">
			<div class="justify-content-between">
				{% include '_partials/_navbar.html.twig' %}
			</div>

			<div class="d-flex mt-5 py-5 justify-content-center align-items-center ">
				<h3>
					Click on the button to display your contract</h3>
				<a class="btn btn-success btn-md" href="#" role="button">Show Contract</a>
			</div>
		</div>
	{% else %}
		<div class="d-flex mt-5 py-5 justify-content-center align-items-center ">
			<a class="btn btn-success btn-md" href="{{ path('app_login') }}" role="button">Back to login</a>
		</div>

	{% endif %}
{% endblock %}
